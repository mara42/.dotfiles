#!/bin/bash
set -e
if [[ -z "${DOTFILES}" ]]; then
    export DOTFILES="$(git rev-parse --show-toplevel)"
fi
source "$DOTFILES/.lib/include.sh"
install_extensions
echo "# This file is autogenerated basing on config/*.gitconfig files"
cat "$DOTFILES/git/config/*.gitconfig" >> "$DOTFILES/git/global.gitconfig"
exit