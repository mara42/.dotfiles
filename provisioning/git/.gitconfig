[core]
	editor = vim
[alias]
	a = add --all
	s = status --branch --show-stash
	m = commit --message
	am = commit --all --message
	amend = commit --amend --no-edit
	force = push --force-with-lease
	log-line = log --oneline --graph --decorate
	mark = "! bash -c \"if [[ $# -eq 2 ]]; then git tag -a $1 -m $2; elif [[ $# -eq 1 ]]; then git tag -a $1 -m $1; fi\" -"
	mark-push = !bash -c \" \
		git mark $1 $2 && \
		git push origin --tags \
	\"
	branch-delete = !bash -c \" \
		git branch -D $1 && \
		git push origin :$1 \
	\"
	tag-delete = !sh -c \" \
		git tag -d $1 && \
		git push origin :refs/tags/$1 \
	\"
	tag-actualize = !bash -c \" \
		git tag-delete $(git describe --abbrev=0) && \
		git mark $(git describe --abbrev=0) && \
		git push origin --tags $1 \
	\"
	get-tag-by-message = !bash -c \" \
		 git log-line | grep -i $1 | cut -d' ' -f 2 \
	\"
